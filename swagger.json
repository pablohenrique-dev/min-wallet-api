                        "user_id": "c4433c6e-92fb-4cec-a639-cf28b7c34424"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "field": {
                            "type": "string"
                          },
                          "message": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "example": {
                    "error": [
                      {
                        "field": "title",
                        "message": "Required"
                      },
                      {
                        "field": "value",
                        "message": "Expected number, received nan"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
